  apt-get update && \
  apt-get install -y \
    fonts-noto \
    locales-all
  # Generate locales
  for LOCALE in ${LOCALES}; do
    echo "Generating Locale for ${LOCALE}"
    localedef -i ${LOCALE} -f UTF-8 ${LOCALE}.UTF-8
  done
