
#!/usr/bin/with-contenv bash

  ## Ubuntu
  if [ -f /usr/bin/apt ]; then
    apt-get update
    apt-get install --no-install-recommends -y \
      dnsutils \
      net-tools \
      iputils-ping \
      traceroute
  fi
  # Alpine
  if [ -f /sbin/apk ]; then
    apk add --no-cache \
      bind-tools \
      net-tools
  fi
